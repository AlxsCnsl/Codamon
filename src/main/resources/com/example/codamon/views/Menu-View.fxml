<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.codamon.controllers.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView fitWidth="600" pickOnBounds="true" preserveRatio="true">
        <Image url="@../logos/pokemon-logo.png"/>
    </ImageView>

    <Button fx:id="battleButton"
            text="Battle !"
            onAction="#onBattleButtonClick"/>

    <Button fx:id="teamBuilderButton"
            text="Team Builder"
            onAction="#onTeamBuilderButtonClick"/>

    <Text fx:id="creditText"
          text="© 2025 Codamon Showdown by Alexis Consolo and Ethan LÊ. Not affiliated with Nintendo or The Pokémon Company"/>
</VBox>
